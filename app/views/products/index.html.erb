<%= render partial: 'layouts/header' %>
	<%= will_paginate @products %>
	<span class="title_right">
    <%= link_to "添加数据", new_product_path %>
  </span>
	<table class="grid_form">
		<tr>
			<th>ID</th>
			<th>名称</th>
			<th>价格</th>
			<th>是否有折扣</th>
			<th>上下架</th>
			<th>入库时间</th>
			<th>类型</th>
			<th>操作</th>
		</tr>
		<% @products.each do |p| %>
			<tr>
				<td><%= p.id %></td>
				<td><%= p.name %></td>
				<td><%= p.price %></td>
				<td><%= p.discount == 1 ? "没有折扣" : "有折扣" %></td>
				<td><%= p.top_and_down == 1 ? "没有下架" : "已下架" %></td>
				<td><%= p.created_at.to_s %></td>
				<td><%= p.type_id %></td>
				<td>
          <%= link_to '详情', p %>
          <%= link_to '编辑', [:edit, p] %>
          <%= link_to '删除', p, method: :delete, data: {confirm: "你确定删除吗？"} %>
				</td>
			</tr>
		<% end %>
	</table>
<%= render partial: 'layouts/footer' %>